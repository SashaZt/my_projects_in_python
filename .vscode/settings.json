{
    // Terminal settings - Настройки терминала
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "terminal.integrated.splitCwd": "workspaceRoot",
    "terminal.integrated.confirmOnKill": "never",
    "terminal.integrated.inheritEnv": true,
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.stickyScroll.enabled": true,
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    // Explorer settings - Настройки файлового менеджера
    "explorer.compactFolders": false,
    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // Workbench settings - Настройки рабочей среды
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Monokai Pro (Filter Machine)",
    // Editor settings - Настройки редактора
    "editor.minimap.enabled": false,
    "editor.detectIndentation": false,
    "editor.renderWhitespace": "all",
    "editor.wordWrap": "on",
    "editor.hover.enabled": true,
    "editor.mouseWheelZoom": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    // Git settings - Настройки Git
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    // Python settings - Настройки Python
    "python.autoComplete.extraPaths": [],
    "python.analysis.extraPaths": [],
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.autoImportCompletions": false,
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.REPL.enableREPLSmartSend": false,
    // Настройки форматирования для Python
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter", // Использовать black для форматирования Python-кода
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit" // Организовывать импорты при сохранении
        }
    },
    // Настройки для isort (упрощение и форматирование импортов)
    "isort.args": [
        "--profile",
        "black"
    ],
    // JSON settings - Настройки JSON
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // HTML settings - Настройки HTML
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    // XML settings - Настройки XML
    "[xml]": {
        "editor.defaultFormatter": "fabianlauer.vs-code-xml-format"
    },
    // Miscellaneous settings - Прочие настройки
    "files.autoSave": "afterDelay",
    "diffEditor.wordWrap": "inherit"
}